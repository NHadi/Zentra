# Remote Server Configuration
REMOTE_PATH=/opt/zentra
DOMAIN=badamigroups.com
ACME_EMAIL=badamigroupsindonesia@gmail.com

# Node Environment Configuration
NODE_ENV_DEV=development
NODE_ENV_STAGING=staging
NODE_ENV_PROD=production

# API URLs
API_URL_DEV=https://dev-api.badamigroups.com/api
API_URL_STAGING=https://staging-api.badamigroups.com/api
API_URL_PROD=https://api.badamigroups.com/api

# Elasticsearch Configuration
ELASTICSEARCH_HOSTS=http://elasticsearch:9200
KIBANA_SERVER_PUBLICBASEURL=https://kibana.badamigroups.com

# Database Configuration - Development
POSTGRES_DB_DEV=zentra-api_development
POSTGRES_USER_DEV=zentra-api_admin
POSTGRES_PASSWORD_DEV=zentra-api_admin_123@#$

# Database Configuration - Staging
POSTGRES_DB_STAGING=zentra-api_staging
POSTGRES_USER_STAGING=zentra-api_admin
POSTGRES_PASSWORD_STAGING=zentra-api_admin_123@#$

# Database Configuration - Production
POSTGRES_DB_PROD=zentra-api_production
POSTGRES_USER_PROD=zentra-api_admin
POSTGRES_PASSWORD_PROD=zentra-api_admin_123@#$

# JWT Configuration - Development
JWT_SECRET_DEV=your-dev-jwt-secret-key
JWT_REFRESH_SECRET_DEV=your-dev-jwt-refresh-secret-key

# JWT Configuration - Staging
JWT_SECRET_STAGING=your-staging-jwt-secret-key
JWT_REFRESH_SECRET_STAGING=your-staging-jwt-refresh-secret-key

# JWT Configuration - Production
JWT_SECRET_PROD=your-prod-jwt-secret-key
JWT_REFRESH_SECRET_PROD=your-prod-jwt-refresh-secret-key

# PgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@zentra-api.com
PGADMIN_DEFAULT_PASSWORD=admin123

# Docker Configuration
COMPOSE_PROJECT_NAME=zentra
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1